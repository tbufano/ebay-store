<div class="container">
  <h1>Edit</h1>
</div>

<div class="container">
  <p><a href="/products"><button type="button" class="btn btn-primary">All Products</button></a></p>
</div>

<div class="container">
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>
   
      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= form_tag "/products/#{@product.id}", method: :patch do %>
    <div class="form-group">
      <%= label_tag :title %>
      <%= text_field_tag :title, @product.title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :description %>
      <%= text_field_tag :description, @product.description, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :image %>
      <%= text_field_tag :image, @product.image, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :price %>
      <%= text_field_tag :price, number_to_currency(@product.price), class: "form-control" %>
    </div>
    <div>
      <%= label_tag :supplier_id %>
      <%= text_field_tag :supplier_id, @product.supplier_id, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :quantity %>
      <%= text_field_tag :quantity, @product.quantity, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= submit_tag "Edit Product", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>