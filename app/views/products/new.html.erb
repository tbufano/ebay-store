<div class="container">
  <h1>Add a new product</h1>
</div>

<div class="container">
  <p><a href="/products"><button type="button" class="btn btn-primary">All Products</button></a></p>
</div>

<div class="container">
  <%= form_tag '/products', method: :post do %>
    <div>
      <%= label_tag :title %>
      <%= text_field_tag :title %>
    </div>
    <div>
      <%= label_tag :description %>
      <%= text_field_tag :description %>
    </div>
    <div>
      <%= label_tag :image %>
      <%= text_field_tag :image %>
    </div>
    <div>
      <%= label_tag :price %>
      <%= text_field_tag :price %>
    </div>
    <div>
      <%= label_tag :quantity %>
      <%= text_field_tag :quantity %>
    </div>
    <div>
      <%= submit_tag "Add Product", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>